@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee Directory";
}

<h1 style="text-align:center">Employee Directory</h1>

@if (!string.IsNullOrWhiteSpace(ViewBag.Error as string))
{
    <div style="margin:10px auto; max-width:800px; padding:10px; border:1px solid #f5c2c7; background:#f8d7da; color:#842029;">
        @ViewBag.Error
    </div>
}

<div style="display:flex; flex-wrap:wrap; gap:15px; justify-content:center; margin-top:20px;">
@foreach (var emp in Model)
{
    <div style="
        background:#fff; padding:15px; border-radius:8px;
        box-shadow:0 2px 6px rgba(0,0,0,0.1);
        width:220px; text-align:center;">
        <h3 style="margin:0; font-size:18px; color:#333;">@emp.Name</h3>
        <p style="margin:6px 0 0; color:#666;">@emp.Phone</p>
    </div>
}
</div>

<form method="get" asp-controller="Employees" asp-action="Index" style="text-align:center; margin-top:20px;">
    <button type="submit" style="
        padding:8px 14px; border:none; border-radius:6px;
        background:#2563eb; color:#fff; cursor:pointer;">
        Refresh
    </button>
</form>
